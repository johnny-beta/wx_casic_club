/* pages/index/detail/index.wxss */
.weui-img_center {
  display: flex;
  justify-content: center;
  align-items: center;  
  margin-top: 0.5em;
  margin-bottom: 0.5em;
}
.weui-article_h1 {
  font-size: 18px;
  margin-left: 0.8em;
  margin-bottom: .34em;
  font-weight: 400;
}
.weui-article_h2 {
  display: flex;
  flex-direction: row;
  font-size: 18px;
  margin-left: 0.8em;
}
.weui-article_name {
  font-size: 12px;
  margin-bottom: .34em;
  font-weight: 400;
  color: rgb(44, 142, 235);
}
.weui-leaveMessage_name {
  font-size: 11px;
  font-weight: 300;
  color: rgb(44, 142, 235);
}
.weui-leaveMessage_content {
  font-size: 14px;
  font-weight: 300;
  color: rgb(0, 0, 0);
}
.weui-article_update_time {
  margin-left: 0.8em;
  font-size: 10px;
  margin-bottom: .34em;
  font-weight: 200;
}
.userPic_article{
width:40rpx;
height:40rpx;
border-radius: 50%;
overflow: hidden;
margin-right: 3px;
}
.userPic_leaveMessage{
width:60rpx;
height:60rpx;
border-radius: 50%;
overflow: hidden;
margin-right: 3px;
}
.input-panel {
    height: 100rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 13rpx 20rpx 0;
    background: #f5f5f7;
    border-top:#d7d7d9 1rpx solid;
    display: flex;
    flex-direction: row;
    position:fixed;
    bottom:0;
}
.send-btn {
    width: 120rpx;
    height: 60rpx;
    background-color: #3891f8;
    font-size: 30rpx;
    color:#fff;
    position: absolute;
    top:0%;
    left:50%;
}
.send-input {
    height: 70rpx;
    width: 50%;
    background: #fff;
    border:#ddd 1rpx solid;
    border-radius: 3px;
    margin-right: 20rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
}
.content-blank {
    height: 300rpx;
}
.wxui-collection {
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    position: absolute;
    top:0%;
    left:70%;
}
.wxui-home {
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    position: absolute;
    top:0%;
    left:80%;
}
.wxui-transmit {
    width:60rpx;
    height:60rpx;
    border-radius: 50%;
    position: absolute;
    top:0%;
    left:90%;
}